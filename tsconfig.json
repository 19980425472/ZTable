{
  "compilerOptions": {
    "types": ["jest", "node"], 
    "module": "ESNext",   
    "lib": ["ES2020", "DOM"],
    "target": "ESNext", 
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "dist/types",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__"]
}
